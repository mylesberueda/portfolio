{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Company",
  "description": "Company information for cover letter generation",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Company name (appears in cover letter heading and 'Why [Company]?' section)"
    },
    "streetAddress": {
      "type": "string",
      "description": "Company street address (optional)"
    },
    "city": {
      "type": "string",
      "description": "Company city, state, zip (optional)"
    }
  },
  "additionalProperties": false
}
